@model DeloitteProject.ViewModels.UserUploadViewModel
@{
    ViewData["Title"] = "Upload";
}

<div class="text-center" style="background-color:#3f3f3f">
    <h1 class="display-4" style="color:white">Welcome!</h1>
    <p style="color:white">Here is the place where you can upload your files.</p>
</div>

<form enctype="multipart/form-data" asp-controller="IdentityUser" asp-action="Upload"
      method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="File" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="File" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button id="btnSubmit" type="submit" class="btn btn-primary" style="margin-left:510px">Upload</button>
        </div>
    </div>

    <a class="navbar-brand" href="/">
        <div style="width:max-content; height:fit-content; align-items:center;">
            <img src="~/lib/video/uploadimg.jpeg" type="submit" class="center" style=" width: 300px; height: 300px; margin-left:400px">

        </div>
    </a>

    @*This script is required to display the selected file in the file upload element*@

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>